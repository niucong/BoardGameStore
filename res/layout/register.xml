<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/topbar" />

    <EditText
        android:id="@+id/register_account"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_input_bg"
        android:hint="请输入手机号或者邮箱接收验证码"
        android:inputType="textEmailAddress"
        android:padding="5dp"
        android:singleLine="true"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/register_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/login_input_bg"
            android:hint="输入验证码"
            android:inputType="number"
            android:padding="5dp"
            android:singleLine="true"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/register_getcode"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="获取验证码"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/register_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_input_bg"
        android:hint="设置密码（6-18位）"
        android:inputType="textPassword"
        android:maxLength="18"
        android:padding="5dp"
        android:password="true"
        android:singleLine="true"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/register_repassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/login_input_bg"
        android:hint="确认密码（6-18位）"
        android:inputType="textPassword"
        android:maxLength="18"
        android:padding="5dp"
        android:password="true"
        android:singleLine="true"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/register_ok"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/register_tip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册代表同意" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玩亦有道网络服务使用协议"
            android:textColor="#ffff66"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>