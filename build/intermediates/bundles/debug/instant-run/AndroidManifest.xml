        <activity
            android:name="com.yikeguan.boardgamestore.AlertDialog"
            android:theme="@style/MyDialogStyle" />
        <activity
            android:name="com.yikeguan.boardgamestore.SearchActivity"
            android:screenOrientation="portrait" />
