<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yikeguan.boardgamestore"
    android:versionCode="4"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <!-- 测试 -->
    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:label="Tests for My App"
        android:targetPackage="com.yikeguan.boardgamestore" />

    <application
        name="com.yikeguan.boardgamestore.app.App"
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tencent1104560823" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name="com.yikeguan.boardgamestore.WelcomeActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yikeguan.boardgamestore.GuideActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yikeguan.boardgamestore.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yikeguan.boardgamestore.ImageViewActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yikeguan.boardgamestore.MemberListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yikeguan.boardgamestore.TrendListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yikeguan.boardgamestore.MemberDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yikeguan.boardgamestore.MemberInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yikeguan.boardgamestore.EditInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yikeguan.boardgamestore.GameDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yikeguan.boardgamestore.PriceActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yikeguan.boardgamestore.GradeScoreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yikeguan.boardgamestore.PublishListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yikeguan.boardgamestore.GameListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yikeguan.boardgamestore.CommentListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name="com.yikeguan.boardgamestore.ChatContactListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.yikeguan.boardgamestore.ChatActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan|stateHidden" />

