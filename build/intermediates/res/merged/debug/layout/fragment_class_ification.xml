<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <include layout="@layout/homepage_header" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/img_class1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/zzjs"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="战争军事"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/img_class2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/hljh"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="欢乐聚会"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/img_class3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/cxcl"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="抽象策略"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/img_class4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/jjjr"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="经济金融"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/img_class5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/tlts"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="推理探索"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/img_class6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/lszz"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="历史政治"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/img_class7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/dzfy"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="动作反应"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/img_class8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/etyx"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="儿童游戏"
                android:textSize="12dp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="#F5F5F5" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:text="热门出版社"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/img_publish_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/more_icon"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="更多\t "
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp" >

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5" />

            <ImageView
                android:id="@+id/img_publish1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/imageviewboundshape"
                android:scaleType="centerInside"
                android:src="@drawable/def_publish" />

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/img_publish2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/imageviewboundshape"
                android:scaleType="centerInside"
                android:src="@drawable/def_publish" />

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/img_publish3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/imageviewboundshape"
                android:scaleType="centerInside"
                android:src="@drawable/def_publish" />

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/img_publish4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/imageviewboundshape"
                android:scaleType="centerInside"
                android:src="@drawable/def_publish" />

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:padding="5dp" >

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5" />

            <ImageView
                android:id="@+id/img_publish5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/imageviewboundshape"
                android:scaleType="centerInside"
                android:src="@drawable/def_publish" />

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/img_publish6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/imageviewboundshape"
                android:scaleType="centerInside"
                android:src="@drawable/def_publish" />

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/img_publish7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/imageviewboundshape"
                android:scaleType="centerInside"
                android:src="@drawable/def_publish" />

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/img_publish8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/imageviewboundshape"
                android:scaleType="centerInside"
                android:src="@drawable/def_publish" />

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:background="#F5F5F5" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:text="知名设计师"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/img_design_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/more_icon"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="更多\t"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp" >

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5" />

            <com.yikeguan.boardgamestore.view.RoundImageView
                android:id="@+id/img_design1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/class_head"/>

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <com.yikeguan.boardgamestore.view.RoundImageView
                android:id="@+id/img_design2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/class_head" />

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <com.yikeguan.boardgamestore.view.RoundImageView
                android:id="@+id/img_design3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/class_head" />

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <com.yikeguan.boardgamestore.view.RoundImageView
                android:id="@+id/img_design4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/class_head" />

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:padding="5dp" >

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5" />

            <com.yikeguan.boardgamestore.view.RoundImageView
                android:id="@+id/img_design5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/class_head" />

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <com.yikeguan.boardgamestore.view.RoundImageView
                android:id="@+id/img_design6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/class_head" />

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <com.yikeguan.boardgamestore.view.RoundImageView
                android:id="@+id/img_design7"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/class_head" />

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1" />

            <com.yikeguan.boardgamestore.view.RoundImageView
                android:id="@+id/img_design8"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/class_head" />

            <View
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>